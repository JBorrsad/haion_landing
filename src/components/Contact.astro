---
import MailIcon from "@/components/icons/Mail.astro"
import WhatsAppIcon from "@/components/icons/WhatsApp.astro"
import LinkedInIcon from "@/components/icons/LinkedIn.astro"
---

<div class="flex flex-col gap-6">
  <p class="text-lg text-gray-700 dark:text-gray-300 mb-4">
    [MENSAJE_CONTACTO_INTRODUCCION]
  </p>
  
  <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
    <a
      href="mailto:[EMAIL_EMPRESA]"
      class="flex items-center gap-4 p-4 rounded-lg border border-gray-200 dark:border-gray-700 hover:border-blue-300 dark:hover:border-blue-600 transition-colors group hover:bg-blue-50 dark:hover:bg-blue-950/30"
    >
      <div class="flex items-center justify-center w-12 h-12 rounded-full bg-blue-100 dark:bg-blue-900 group-hover:bg-blue-200 dark:group-hover:bg-blue-800 transition-colors">
        <MailIcon class="size-6 text-blue-600 dark:text-blue-400" />
      </div>
      <div>
        <h3 class="font-semibold text-gray-900 dark:text-white">Email</h3>
        <p class="text-sm text-gray-600 dark:text-gray-400">[EMAIL_EMPRESA]</p>
      </div>
    </a>

    <a
      href="https://wa.me/[TELEFONO_WHATSAPP]"
      target="_blank"
      rel="noopener noreferrer"
      class="flex items-center gap-4 p-4 rounded-lg border border-gray-200 dark:border-gray-700 hover:border-green-300 dark:hover:border-green-600 transition-colors group hover:bg-green-50 dark:hover:bg-green-950/30"
    >
      <div class="flex items-center justify-center w-12 h-12 rounded-full bg-green-100 dark:bg-green-900 group-hover:bg-green-200 dark:group-hover:bg-green-800 transition-colors">
        <WhatsAppIcon class="size-6 text-green-600 dark:text-green-400" />
      </div>
      <div>
        <h3 class="font-semibold text-gray-900 dark:text-white">WhatsApp</h3>
        <p class="text-sm text-gray-600 dark:text-gray-400">[TEXTO_WHATSAPP]</p>
      </div>
    </a>

    <a
      href="[URL_LINKEDIN_EMPRESA]"
      target="_blank"
      rel="noopener noreferrer"
      class="flex items-center gap-4 p-4 rounded-lg border border-gray-200 dark:border-gray-700 hover:border-blue-300 dark:hover:border-blue-600 transition-colors group hover:bg-blue-50 dark:hover:bg-blue-950/30"
    >
      <div class="flex items-center justify-center w-12 h-12 rounded-full bg-blue-100 dark:bg-blue-900 group-hover:bg-blue-200 dark:group-hover:bg-blue-800 transition-colors">
        <LinkedInIcon class="size-6 text-blue-600 dark:text-blue-400" />
      </div>
      <div>
        <h3 class="font-semibold text-gray-900 dark:text-white">LinkedIn</h3>
        <p class="text-sm text-gray-600 dark:text-gray-400">[TEXTO_LINKEDIN]</p>
      </div>
    </a>

    <div class="flex items-center gap-4 p-4 rounded-lg border border-gray-200 dark:border-gray-700 bg-gray-50 dark:bg-gray-800/30">
      <div class="flex items-center justify-center w-12 h-12 rounded-full bg-gray-100 dark:bg-gray-800">
        <svg class="size-6 text-gray-600 dark:text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
        </svg>
      </div>
      <div>
        <h3 class="font-semibold text-gray-900 dark:text-white">Ubicaci√≥n</h3>
        <p class="text-sm text-gray-600 dark:text-gray-400">[DIRECCION_EMPRESA]</p>
      </div>
    </div>
  </div>

  <div class="mt-4 p-6 rounded-lg border border-gray-200 dark:border-gray-700 bg-gradient-to-r from-blue-50 to-indigo-50 dark:from-blue-950/30 dark:to-indigo-950/30">
    <h3 class="font-semibold text-gray-900 dark:text-white mb-2">[TITULO_LLAMADA_ACCION]</h3>
    <p class="text-gray-600 dark:text-gray-400 mb-4">[MENSAJE_LLAMADA_ACCION]</p>
    <a
      href="mailto:[EMAIL_EMPRESA]"
      class="inline-flex items-center gap-2 px-6 py-3 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-lg transition-colors"
    >
      <MailIcon class="size-4" />
      [TEXTO_BOTON_CONTACTO]
    </a>
  </div>
</div> 