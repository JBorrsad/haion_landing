---
import MailIcon from "@/components/icons/Mail.astro"
import WhatsAppIcon from "@/components/icons/WhatsApp.astro"
import LinkedInIcon from "@/components/icons/LinkedIn.astro"
---

<div class="flex flex-col gap-6">
  <p class="text-lg text-gray-700 dark:text-gray-300 mb-4">
    [MENSAJE_CONTACTO_INTRODUCCION]
  </p>
  
  <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
    <a
      href="mailto:[EMAIL_EMPRESA]"
      class="flex items-center gap-4 p-4 rounded-lg border border-gray-200 dark:border-gray-700 hover:border-blue-300 dark:hover:border-blue-600 transition-colors group hover:bg-blue-50 dark:hover:bg-blue-950/30"
    >
      <div class="flex items-center justify-center w-12 h-12 rounded-full bg-blue-100 dark:bg-blue-900 group-hover:bg-blue-200 dark:group-hover:bg-blue-800 transition-colors">
        <MailIcon class="size-6 text-blue-600 dark:text-blue-400" />
      </div>
      <div>
        <h3 class="font-semibold text-gray-900 dark:text-white">Email</h3>
        <p class="text-sm text-gray-600 dark:text-gray-400">[EMAIL_EMPRESA]</p>
      </div>
    </a>

    <a
      href="https://wa.me/[TELEFONO_WHATSAPP]"
      target="_blank"
      rel="noopener noreferrer"
      class="flex items-center gap-4 p-4 rounded-lg border border-gray-200 dark:border-gray-700 hover:border-green-300 dark:hover:border-green-600 transition-colors group hover:bg-green-50 dark:hover:bg-green-950/30"
    >
      <div class="flex items-center justify-center w-12 h-12 rounded-full bg-green-100 dark:bg-green-900 group-hover:bg-green-200 dark:group-hover:bg-green-800 transition-colors">
        <WhatsAppIcon class="size-6 text-green-600 dark:text-green-400" />
      </div>
      <div>
        <h3 class="font-semibold text-gray-900 dark:text-white">WhatsApp</h3>
        <p class="text-sm text-gray-600 dark:text-gray-400">[TEXTO_WHATSAPP]</p>
      </div>
    </a>

    <a
      href="[URL_LINKEDIN_EMPRESA]"
      target="_blank"
      rel="noopener noreferrer"
      class="flex items-center gap-4 p-4 rounded-lg border border-gray-200 dark:border-gray-700 hover:border-blue-300 dark:hover:border-blue-600 transition-colors group hover:bg-blue-50 dark:hover:bg-blue-950/30"
    >
      <div class="flex items-center justify-center w-12 h-12 rounded-full bg-blue-100 dark:bg-blue-900 group-hover:bg-blue-200 dark:group-hover:bg-blue-800 transition-colors">
        <LinkedInIcon class="size-6 text-blue-600 dark:text-blue-400" />
      </div>
      <div>
        <h3 class="font-semibold text-gray-900 dark:text-white">LinkedIn</h3>
        <p class="text-sm text-gray-600 dark:text-gray-400">[TEXTO_LINKEDIN]</p>
      </div>
    </a>

    <div class="flex items-center gap-4 p-4 rounded-lg border border-gray-200 dark:border-gray-700 bg-gray-50 dark:bg-gray-800/30">
      <div class="flex items-center justify-center w-12 h-12 rounded-full bg-gray-100 dark:bg-gray-800">
        <svg class="size-6 text-gray-600 dark:text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
        </svg>
      </div>
      <div>
        <h3 class="font-semibold text-gray-900 dark:text-white">Ubicación</h3>
        <p class="text-sm text-gray-600 dark:text-gray-400">[DIRECCION_EMPRESA]</p>
      </div>
    </div>
  </div>

  <div class="mt-8 p-6 rounded-lg border border-gray-200 dark:border-gray-700 bg-gray-50 dark:bg-gray-800/30">
    <div class="text-center mb-6">
      <h3 class="text-2xl font-bold text-gray-900 dark:text-white mb-2">
        [TITULO_FORMULARIO_CONTACTO]
      </h3>
      <p class="text-gray-600 dark:text-gray-400">
        [SUBTITULO_FORMULARIO_CONTACTO]
      </p>
    </div>

    <form class="space-y-6">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div>
          <label for="nombre" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
            [ETIQUETA_NOMBRE] <span class="text-red-500">*</span>
          </label>
          <input
            type="text"
            id="nombre"
            name="nombre"
            required
            placeholder="[PLACEHOLDER_NOMBRE]"
            class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-white dark:placeholder-gray-400 transition-colors"
          />
        </div>
        
        <div>
          <label for="telefono" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
            [ETIQUETA_TELEFONO]
          </label>
          <input
            type="tel"
            id="telefono"
            name="telefono"
            placeholder="[PLACEHOLDER_TELEFONO]"
            class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-white dark:placeholder-gray-400 transition-colors"
          />
        </div>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div>
          <label for="direccion" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
            [ETIQUETA_DIRECCION] <span class="text-red-500">*</span>
          </label>
          <input
            type="text"
            id="direccion"
            name="direccion"
            required
            placeholder="[PLACEHOLDER_DIRECCION]"
            class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-white dark:placeholder-gray-400 transition-colors"
          />
        </div>
        
        <div>
          <label for="email" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
            [ETIQUETA_EMAIL] <span class="text-red-500">*</span>
          </label>
          <input
            type="email"
            id="email"
            name="email"
            required
            placeholder="[PLACEHOLDER_EMAIL]"
            class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-white dark:placeholder-gray-400 transition-colors"
          />
        </div>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div>
          <label for="tipo-cliente" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
            [ETIQUETA_TIPO_CLIENTE] <span class="text-red-500">*</span>
          </label>
          <select
            id="tipo-cliente"
            name="tipo-cliente"
            required
            class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-white transition-colors"
          >
            <option value="">[OPCION_SELECCIONAR]</option>
            <option value="[VALOR_OPCION_1]">[TEXTO_OPCION_1]</option>
            <option value="[VALOR_OPCION_2]">[TEXTO_OPCION_2]</option>
            <option value="[VALOR_OPCION_3]">[TEXTO_OPCION_3]</option>
          </select>
        </div>
        
        <div>
          <label for="servicio" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
            [ETIQUETA_SERVICIO] <span class="text-red-500">*</span>
          </label>
          <select
            id="servicio"
            name="servicio"
            required
            class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-white transition-colors"
          >
            <option value="">[OPCION_SELECCIONAR]</option>
            <option value="[VALOR_SERVICIO_1]">[TEXTO_SERVICIO_1]</option>
            <option value="[VALOR_SERVICIO_2]">[TEXTO_SERVICIO_2]</option>
            <option value="[VALOR_SERVICIO_3]">[TEXTO_SERVICIO_3]</option>
          </select>
        </div>
      </div>

      <div>
        <label for="mensaje" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
          [ETIQUETA_MENSAJE]
        </label>
        <textarea
          id="mensaje"
          name="mensaje"
          rows="5"
          placeholder="[PLACEHOLDER_MENSAJE]"
          class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-white dark:placeholder-gray-400 transition-colors resize-vertical"
        ></textarea>
        <p class="text-sm text-gray-500 dark:text-gray-400 mt-1">0 de 200 caracteres máximos</p>
      </div>

      <div class="flex items-start gap-3">
        <input
          type="checkbox"
          id="politica"
          name="politica"
          required
          class="mt-1 w-4 h-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500 dark:border-gray-600 dark:bg-gray-700"
        />
        <label for="politica" class="text-sm text-gray-700 dark:text-gray-300">
          [TEXTO_POLITICA_PRIVACIDAD] <a href="[URL_POLITICA_PRIVACIDAD]" class="text-blue-600 hover:text-blue-700 dark:text-blue-400 dark:hover:text-blue-300">[TEXTO_LINK_POLITICA]</a>
        </label>
      </div>

      <div class="pt-4">
        <button
          type="submit"
          class="w-full md:w-auto px-8 py-3 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-lg transition-colors focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 dark:focus:ring-offset-gray-800"
        >
          [TEXTO_BOTON_ENVIAR]
        </button>
      </div>
    </form>
  </div>
</div> 